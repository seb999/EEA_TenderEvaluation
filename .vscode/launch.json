{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI Service",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "cwd": "${workspaceFolder}/service",
      "python": "${workspaceFolder}/service/venv/Scripts/python.exe",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/service"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "React: Vite Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "serverReadyAction": {
        "pattern": "Local:.*http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: React + Python API",
      "configurations": ["Python: FastAPI Service", "React: Vite Dev Server"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      }
    }
  ]
}
