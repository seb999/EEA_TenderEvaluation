{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Python Dependencies",
      "type": "shell",
      "command": "${workspaceFolder}/BACK/venv/Scripts/pip",
      "args": ["install", "-r", "requirements.txt"],
      "options": {
        "cwd": "${workspaceFolder}/BACK"
      },
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Install Node Dependencies",
      "type": "npm",
      "script": "install",
      "options": {
        "cwd": "${workspaceFolder}/FRONT"
      },
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Start Python Service",
      "type": "shell",
      "command": "${workspaceFolder}/BACK/venv/Scripts/python",
      "args": ["-m", "uvicorn", "main:app", "--reload", "--host", "127.0.0.1", "--port", "8000"],
      "options": {
        "cwd": "${workspaceFolder}/BACK"
      },
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start React Dev Server",
      "type": "npm",
      "script": "dev",
      "options": {
        "cwd": "${workspaceFolder}/FRONT"
      },
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start Full Stack",
      "dependsOn": ["Start Python Service", "Start React Dev Server"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
